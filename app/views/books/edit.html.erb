<div>
  <%= flash[:notice] %>
</div>

<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

 <%= form_with model: @book do |f| %>
 
   <p>Title</p><%= f.text_field :title %>
   
   <p>Body</p><%= f.text_area :body %>
   <br>
   <%= f.submit 'Update Book' %>
   <br>
   
    <%= link_to 'Show', book_path %>｜<%= link_to 'Back', books_path %>
  
<% end %>
